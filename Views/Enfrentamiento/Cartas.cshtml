@model juegoCartas_net.Models.Usuario
@{
  ViewData["Title"] = "3D Flip Card";
  Layout = "~/Views/Shared/_Layout.cshtml";
  var listaCartas = ViewBag.Cartas;
}

<div class="conteiner-usuario">
  <div class="card usuario">
    <div class="usuario-img">
      <img src="@Model.Avatar" alt="avatar" />
    </div>
    <div class="usuario-info">
      <h1>@Model.Nombre</h1>
      <p class="title">Jugador</p>
      <p>Harvard University</p>
      <input id="id" type= "hidden" value=@Model.Id />
    
    </div>
  </div>
</div>
<form method="post" asp-action="Partida" asp-controller="Enfrentamiento">
  <div class="container-cartas">
 @foreach (var car in listaCartas)
{
  <div class="wrapper">
    <div class="card front-face" value="@car.Id" data-carta-id="@car.Id">
      <img src="@car.Imagen" />

    </div>

    <div class="card back-face" id="carta-@car.Id">
      <img src="@Model.Avatar" />
      <div class="info">
        <h2>@car.PersonajeNombre</h2>
        <label>
          <input type="checkbox" class="carta-checkbox" name="cartasSeleccionadas" value="@car.Id" data-carta-id="@car.Id" />
          Seleccionar
        </label>
      </div>
    </div>
  </div>
}
<div style="text-align: center; margin-top: 20px;">
  <button type="submit" class="btn btn-primary">Jugar</button>
</div>

</form>
@section Scripts {
<script>
  const maxSeleccion = 3;
  const checkboxes = document.querySelectorAll('.carta-checkbox');

  checkboxes.forEach(cb => {
    cb.addEventListener('change', () => {
      const seleccionadas = document.querySelectorAll('.carta-checkbox:checked');

      // Limitar a 3 cartas seleccionadas
      if (seleccionadas.length > maxSeleccion) {
        cb.checked = false;
        alert("Solo puedes seleccionar hasta 3 cartas.");
        return;
      }

      // Obtener la carta asociada al checkbox
      const cartaId = cb.dataset.cartaId; // el atributo data-carta-id
      const carta = document.getElementById(`carta-${cartaId}`);

      // Agregar o quitar la clase visual
      if (cb.checked) {
        carta.classList.add("selected");   // ðŸ‘‰ pinta el borde
      } else {
        carta.classList.remove("selected");  // ðŸ‘‰ quita el borde
      }
    });
  });
</script>
}


